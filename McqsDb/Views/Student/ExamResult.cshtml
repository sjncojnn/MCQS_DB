@model Mcq.Models.ExamResultViewModel

@{
    ViewData["Title"] = "Exam Result";
}

<div class="container mt-5">
    <h1 class="text-center">Exam Result</h1>
    <div class="card mt-4 shadow">
        <div class="card-body">
            <h3 class="card-title">@Model.ExamName</h3>
            <p><strong>Score:</strong> @Model.ExamScore</p>
            <p><strong>Total Questions:</strong> @Model.TotalQuestions</p>
            <p><strong>Correct Answers:</strong> @Model.CorrectAnswers</p>
            <p><strong>Start Time:</strong> @Model.StartTime.ToString("g")</p>
            <p><strong>Completion Time:</strong> @Model.CompletionTime.ToString("g")</p>
            <p><strong>Duration:</strong> @Model.Duration.ToString() minutes</p>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Performance" class="btn btn-primary">Back to Performance</a>
    </div>
</div>
